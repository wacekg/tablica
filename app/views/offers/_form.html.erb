<%= form_for @offer do |f| %>
 <p>
   <%= f.label :Przedmiot %>
   <%= f.text_field :title %>
 </p>

 <p>
   <%= f.label :Opis %>
   <%= f.text_area :content %>
 </p>

 <p>
   <%= f.label :Cena %>
   <%= f.number_field :price %>
 </p>

 <p>
   <%= f.label :Zdjęcie %>
   <%= f.file_field :image %>
 </p>

 <p>
   <%= f.submit 'Zapisz' %>
 </p>
<% end %>

<h3>
 <%= link_to 'Strona główna', offers_path %>
</h3>
